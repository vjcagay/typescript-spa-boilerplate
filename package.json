{
  "name": "webpack-typescript",
  "version": "1.0.0",
  "description": "Webpack configuration for TypeScript projects",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "compile:development:dll": "webpack --config webpack.config.dll.ts --mode=development",
    "compile:development:source": "webpack --mode=development",
    "compile:production:dll": "webpack --config webpack.config.dll.ts --mode=production",
    "compile:production:source": "webpack --mode=production",
    "server": "webpack-dev-server --mode=development",
    "tslint": "tslint --project ./"
  },
  "keywords": [
    "TypeScript",
    "WebPack",
    "configuration",
    "module",
    "bundler"
  ],
  "author": "Vincent John Cagay",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/clean-webpack-plugin": "^0.1.2",
    "@types/compression-webpack-plugin": "^0.4.2",
    "@types/html-webpack-plugin": "^2.30.3",
    "@types/jest": "^22.2.3",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/node": "^10.1.2",
    "@types/optimize-css-assets-webpack-plugin": "^1.3.3",
    "@types/webpack": "^4.4.0",
    "@types/webpack-dev-server": "^2.9.4",
    "clean-webpack-plugin": "^0.1.19",
    "compression-webpack-plugin": "^1.1.11",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "html-webpack-include-assets-plugin": "^1.0.4",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.4",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
